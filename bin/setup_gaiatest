#!/bin/bash

printf "Making sure gaiatest and marionette are up to date ...\n\n"

git clone https://github.com/mozilla/gaia-ui-tests.git

# Make necessary adjustments
./bin/tweak_gaiatest

# Install setuptools.
sudo apt-get install python-setuptools

# Install gaiatest.
cd gaia-ui-tests
sudo python setup.py develop
